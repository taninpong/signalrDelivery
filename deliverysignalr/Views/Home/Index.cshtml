@{
    ViewData["Title"] = "Home Page";
}

<div class="form-group row">
    <label for="userInput" class="col-2 col-form-label">User</label>
    <div class="col col-sm-6">
        <input id="userInput" class="form-control" />
    </div>
</div>

<div class="form-group row">
    <label for="message" class="col-2 col-form-label">Message</label>
    <div class="col col-sm-6">
        <input id="messageInput" class="form-control" />
    </div>
</div>
<p id="demo"></p>
<button id="send" type="button" class="btn btn-primary">Send Message</button>


<form action="dlgsubmit">
    <div class="form-group row">
        <label for="Restaurant" class="col-2 col-form-label">RestaurantName</label>
        <div class="col col-sm-6">
            <input id="Restaurantname" name="Restaurantname" class="form-control" />
        </div>
    </div>
    <button id="senddatatodb" class="btn btn-primary" >Submit Data To DB</button>
</form>
<p>Time: @ViewData["Timestamp"]</p>
<hr>

<p id="messageList"></p>

